doctype html
html
    head
        meta(charset='utf-8')
        title Test
        link(rel='stylesheet', type='text/css', href='/css/style.css')
        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
    body
        .container
            fieldset
                form(method='post' Action='/createNewAccount')
                    input.ghost-input(name='ssn', type='text', placeholder='SSN (XXX-XX-XXXX)', required ='')
                    input.ghost-input(name='first_name', type='text', placeholder='First Name', required ='')
                    input.ghost-input(name='last_name', type='text', placeholder='Last name', required ='')
                    input.ghost-input(name='email', type='text', placeholder='Email ID', required ='')
                    input.ghost-input(name='address', type='text', placeholder='Street Address', required ='')
                    input.ghost-input(name='city', type='text', placeholder='City', required ='')
                    input.ghost-input(name='state', type='text', placeholder='State', required ='')
                    input.ghost-button(type='submit', value='Create Account')



